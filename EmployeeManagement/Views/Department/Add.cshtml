@model Department
<form action="/department/add" method="POST">
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col-md-8">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Add Department</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form>
                <div class="card-body">
                    <div class="col-md-6 form-group">
                    <label asp-for="Id">ID</label>
                    <span asp-validation-for="Id" class="text-danger"></span>
                          <input name = "Id" class="form-control" type="number" required>      
                  </div>
                    <div class="col-md-6 form-group">
                    <label asp-for="Name">Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                          <input name = "Name" class="form-control" type="text" required>      
                  </div>
                  <div class="col-md-6 form-group">
                    <label asp-for="Code"> Code</label>
                          <input name="code" class="form-control" type="number" required>      
                  </div>
                  <div class="col-md-6 form-group">
                    <label asp-for="Branch"> Branch</label>
                          <input  id="Branch" name = "Branch" class="form-control" type="text" required >      
                  </div>
                  
                </div>
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>
</form>            
            <!-- /.card -->